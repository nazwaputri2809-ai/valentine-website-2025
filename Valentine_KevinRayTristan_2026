<div class="container">
    <h1>Kevin Ray Tristan üíñ</h1>
    <h2 id="question">Do you like me?</h2>

    <div id="buttons">
        <button onclick="firstYes()">Yes</button>
        <button onclick="firstNo()">No</button>
    </div>

    <div id="loveMeter"></div>
</div>

<script>
function firstYes() {
    document.getElementById("question").innerHTML = 
    "I don't like you, I love you! ‚ù§Ô∏è<br><br>How much do you love me?";
    
    document.getElementById("buttons").innerHTML =
    `<button onclick="increaseLove()">This much!</button>`;
}

function firstNo() {
    alert("You can't say no üòù‚ù§Ô∏è");
}

let love = 0;

function increaseLove() {
    love += 100;
    document.getElementById("loveMeter").innerHTML = love + "% ‚ù§Ô∏è";

    if (love >= 1000) {
        document.getElementById("question").innerHTML =
        "To infinity and beyond! üöÄüíù<br><br>Will you be my Valentine?";
        
        document.getElementById("buttons").innerHTML =
        `<button onclick="finalYes()">Yes!</button>
         <button onclick="runAway(this)">No</button>`;
    }
}

function finalYes() {
    document.getElementById("question").innerHTML =
    "Yay! I'm the luckiest person... üíñ<br>Now come get your gift üéÅüíã";
    
    document.getElementById("buttons").innerHTML = "";
}

function runAway(btn) {
    btn.style.position = "absolute";
    btn.style.top = Math.random() * window.innerHeight + "px";
    btn.style.left = Math.random() * window.innerWidth + "px";
}

// floating hearts
setInterval(() => {
    const heart = document.createElement("div");
    heart.classList.add("heart");
    heart.innerHTML = ["‚ù§Ô∏è","üíñ","üíù","üíó","üíì"][Math.floor(Math.random()*5)];
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.fontSize = Math.random() * 20 + 15 + "px";
    document.body.appendChild(heart);

    setTimeout(() => {
        heart.remove();
    }, 10000);

}, 500);
</script>

